generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Usuario {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  nombre          String
  email           String         @unique
  password        String
  tipo            String         // 'organizador' o 'participante'
  torneos         Torneo[]       @relation("OrganizadorTorneos")
  participaciones Participante[] // Relaci√≥n con Participante
}

model Torneo {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  nombre        String
  fecha         DateTime
  ubicacion     String
  participantes Participante[]
  organizadorId String
  organizador   Usuario        @relation("OrganizadorTorneos", fields: [organizadorId], references: [id])
}

model Participante {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  torneoId  String
  torneo    Torneo  @relation(fields: [torneoId], references: [id])
  usuarioId String
  usuario   Usuario @relation(fields: [usuarioId], references: [id])
}
